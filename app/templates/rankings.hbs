<header class="stream__header">
  <h2 class="stream__head">{{ pageTitle }}</h2>
</header>

<section class="stream__section">
	<p class="section__p">
		{{ t 'rankings.intro.p' }}
	</p>

	<div class='explanation explanation__faq'>
	  <h4 class='explanation__title'>{{t 'rankings.explanation.title'}} (About the rankings)</h4>

	  <div {{bind-attr class=':explanation__copy showAll:explanation__copy--show:explanation__copy--hide'}}>
	    <p class='explanation__p'>{{t 'rankings.explanation.body'}} (aka, why is there an N/A for my department? How are these calculated?)</p>
	  </div>

	  {{#if isTextLarge}}
	    <button {{action 'toggleText'}} class='btn btn--standalone explanation__btn'>
	      {{t buttonText}}
	    </button>
	  {{/if}}
	</div>
</section>

<section class="stream__section">
	<h3 class="section__head">{{ t 'rankings.section.departments' }}</h3>
	{{component 'table-download'
		name=sectionDepartments
		classNames='cta__wrap--compact'
		data=model.departments
		source='rankings'
		pageTitle=pageTitle
	}}
	{{component 'graphbuilder-table'
		data=model.departments
		source='rankings'
		sortby='eci'
	}}
</section>

{{#if featureToggle.showCities }}
  <section class="stream__section">
    <h3 class="section__head">{{ t 'rankings.section.cities' }}</h3>
    {{component 'table-download'
      name=sectionCities
      classNames='cta__wrap--compact'
      data=model.msas
      source='rankings'
      pageTitle=pageTitle
    }}
    {{component 'graphbuilder-table'
      data=model.msas
      source='rankings'
      sortby='eci'
    }}
  </section>
{{/if}}
