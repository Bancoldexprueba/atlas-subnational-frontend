{{outlet}}
<main class="stream index">
  <article class="stream__article stream__article--indent--left">
    <header class="stream__header index__header">
      <h1 class="stream__head index__head">{{ t 'index.header_head' }}</h1>
      <h2 class="stream__subhead">{{ t 'index.header_subhead' }}</h2>
      <form class="search__wrap pageheader__search__wrap">
        <div class="search__field__wrap pageheader__search__field__wrap">
          {{input
            class="search"
            placeholder=( t 'pageheader.search_placeholder' )
            value=query
            enter='query'
            required='required'
          }}
          <button class="search__reset fa fa-close" type="reset"></button>
        </div>
        <input class="search__submit btn btn--standalone btn--search" type="submit" value="{{ t 'pageheader.search_link' }}" {{action 'query' query}}>
      </form>
    </header>
    <section class="stream__section">
      <h3 class="section__head">{{ t 'index.profiles_head' }}</h3>
      <p class="section__p">{{ t 'index.profiles_subhead' }}</p>
      <a href="/location/1" class="btn btn--standalone btn--stream">{{ t 'index.profiles_cta' }}</a>
    </section>
    <section class="stream__section">
      <h3 class="section__head">{{ t 'index.builder_head' }}</h3>
      <p class="section__p">{{ t 'index.builder_subhead' }}</p>
      <a href="/graph_builder/product-87/source/locations/visualization/multiples?endDate=2013&startDate=2008&variable=export_value" class="btn btn--standalone btn--stream">{{ t 'index.builder_cta' }}</a>
    </section>
    <section class="stream__section">
      <h3 class="section__head">{{ t 'index.complexity_head' }}</h3>
      <p class="section__p">{{ t 'index.complexity_subhead' }}</p>
      <figure class="index__figure">
        <img src="" alt="">
        <div>
          <p class="section__p">{{ t 'index.complexity_caption' }}</p>
          <a href="/about/glossary" class="btn btn--standalone btn--stream">{{ t 'index.complexity_cta' }}</a>
        </div>
      </figure>
      <h3 class="section__head section__head--spacey">{{ t 'index.research_head' }}</h3>
      <ul class="index__featuredin__list">
        <li class="index__featuredin__item">
          <img src="assets/img/index/nyt.png" alt="New York Times" class="index__featuredin__img">
        </li>
        <li class="index__featuredin__item">
          <img src="assets/img/index/economist.png" alt="The Economist" class="index__featuredin__img">
        </li>
        <li class="index__featuredin__item">
          <img src="assets/img/index/wsj.png" alt="The Wall Street Journal" class="index__featuredin__img">
        </li>
        <li class="index__featuredin__item">
          <img src="assets/img/index/forbes.png" alt="Forbes" class="index__featuredin__img">
        </li>
        <li class="index__featuredin__item">
          <img src="assets/img/index/ft_2.png" alt="Financial Times" class="index__featuredin__img">
        </li>
      </ul>
    </section>
